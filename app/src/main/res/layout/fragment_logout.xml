<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <registerRequest>

    </registerRequest>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.logout.LogoutFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragment_logut_logout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="logut"
                android:layout_gravity="end"
                android:textSize="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp" />

            <TextView
                android:id="@+id/fragment_logout_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:textSize="@dimen/_20ssp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_60sdp"/>

            <TextView
                android:id="@+id/fragment_logout_email_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="email"
                android:textSize="@dimen/_20ssp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_30sdp"/>

            <TextView
                android:id="@+id/fragment_logout_password_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="id"
                android:textSize="@dimen/_20ssp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_30sdp"/>

            <TextView
                android:id="@+id/fragment_logout_phone_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="phone"
                android:textSize="@dimen/_20ssp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_30sdp"/>

        </LinearLayout>

    </FrameLayout>
</layout>